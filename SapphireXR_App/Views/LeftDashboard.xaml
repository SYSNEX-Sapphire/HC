<Page x:Class="SapphireXR_App.Views.LeftDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SapphireXR_App.Views"
      xmlns:model="clr-namespace:SapphireXR_App.Models"
      xmlns:anim="https://github.com/whistyun/AnimatedImage.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="300"
      Title="LeftDashboard">
    <Page.Resources>
        <Style TargetType="Border" x:Key="Tab">
            <Setter Property="BorderBrush" Value="{StaticResource Gray_300}" />
            <Setter Property="BorderThickness">
                <Setter.Value>
                    <Thickness Bottom="1" />
                </Setter.Value>
            </Setter>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Top="{StaticResource p_2}" />
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Background="{StaticResource Gray_100}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="300"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="{StaticResource Gray_300}" BorderThickness="0, 0, 0, 1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="29"/>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="0"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="34" />
                    <ColumnDefinition Width="9" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image Grid.Row="1" Grid.Column="1" Source="/Resources/icons/icon=sapphire.png" />
                <Label Grid.Row="1" Grid.Column="3" FontFamily="Segoe UI" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Gray_950}" Content="SapphireXR" Padding="0"/>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.Margin>
                <Thickness Left="{StaticResource p_3}" Right="{StaticResource p_3}" />
            </Grid.Margin>

            <!-- Machine Information -->
            <Grid Margin="8,8,8,0" Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="166" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Height="300" anim:ImageBehavior.AnimatedSource="{Binding SignalTowerImage, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="2" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="4" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="2" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="4" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="2" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="4" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="2" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="4" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="2" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" FontFamily="Segoe UI" FontSize="12" Foreground="{StaticResource Gray_900}" Margin="0" Padding="0"><Run Text="Machine Name"/></TextBlock>
                        <TextBlock Grid.Row="2" Grid.Column="0" FontFamily="Segoe UI" FontSize="12" Foreground="{StaticResource Gray_950}"  Margin="0"  Padding="0" FontWeight="Bold"><Run Text="Lumi HVPE"/></TextBlock>
                        <TextBlock FontFamily="Segoe UI" Grid.Row="12" Grid.Column="0" FontSize="12" Foreground="{DynamicResource Gray_900}" Margin="0" Padding="0"><Run Language="ko-kr" Text="System ID"/></TextBlock>
                        <TextBlock FontFamily="Segoe UI" Grid.Row="14" Grid.Column="0"  FontSize="12" Foreground="{DynamicResource Gray_950}" Margin="0" Padding="0" FontWeight="Bold"><Run Language="ko-kr" Text="2025 Lumi"/></TextBlock>
                        <TextBlock FontFamily="Segoe UI" Grid.Row="4" Grid.Column="0" FontSize="12" Foreground="{DynamicResource Gray_900}" Margin="0" Padding="0" ><Run Language="ko-kr" Text="Application"/></TextBlock>
                        <TextBlock FontFamily="Segoe UI" Grid.Row="6" Grid.Column="0" FontSize="12" Foreground="{DynamicResource Gray_950}" Margin="0" Padding="0" FontWeight="Bold" RenderTransformOrigin="0.563,1.979"><Run Language="ko-kr" Text="GaN"/></TextBlock>
                        <TextBlock FontFamily="Segoe UI" FontSize="12" Grid.Row="16" Grid.Column="0" Foreground="{DynamicResource Gray_900}" Margin="0" Padding="0" ><Run Language="ko-kr" Text="PLC Address"/></TextBlock>
                        <TextBlock Text="{Binding PLCAddressText}" Grid.Row="18" Grid.Column="0" FontFamily="Segoe UI" FontSize="12" Foreground="{DynamicResource Gray_950}" Margin="0" Padding="0" FontWeight="Bold"><Run Text="Machine Nam"/><Run Language="ko-kr" Text="e"/></TextBlock>
                        <TextBlock FontFamily="Segoe UI" Grid.Row="8" Grid.Column="0"  FontSize="12" Foreground="{DynamicResource Gray_900}" Margin="0" Padding="0" ><Run Text="PLC "/><Run Language="ko-kr" Text="C"/><Run Text="onnection"/></TextBlock>
                        <TextBlock Text="{Binding PLCConnectionStatus}" Grid.Row="10" Grid.Column="0" FontFamily="Segoe UI" FontSize="12" Margin="0" Padding="0" Foreground="{Binding PLCConnectionStatusColor}" FontWeight="Bold" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.Margin>
                <Thickness Left="{StaticResource p_3}" Right="{StaticResource p_3}" />
            </Grid.Margin>
            <!-- Source Valve Current Status -->
            <Grid Grid.Row="2" VerticalAlignment="Top" IsEnabled="False">
                <Border Style="{StaticResource Tab}">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                        <StackPanel.Margin>
                            <Thickness Bottom="{StaticResource p_4}" Left="{StaticResource p_2}" Right="{StaticResource p_2}" />
                        </StackPanel.Margin>
                        <Grid Height="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Source="/Resources/icons/icon=control_knobs.png"  Stretch="Fill"/>
                            <TextBlock Grid.Column="2" Foreground="{DynamicResource Gray_950}" FontSize="14" FontFamily="Segoe UI" FontWeight="Bold" HorizontalAlignment="Left"  VerticalAlignment="Center"><Bold><Run Text="Source Status"/></Bold></TextBlock>
                        </Grid>
                        <Grid VerticalAlignment="Top">
                            <Grid.Resources>
                                <Style TargetType="Border" x:Key="SourceStatusIndicator">
                                    <Setter Property="Background" Value="{StaticResource Gray_300}" />
                                    <Setter Property="Margin" Value="2" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="CornerRadius">
                                        <Setter.Value>
                                            <CornerRadius TopLeft="{StaticResource r_1}" TopRight="{StaticResource r_1}" BottomLeft="{StaticResource r_1}" BottomRight="{StaticResource r_1}" />
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                                <Style TargetType="TextBlock" x:Key="SourceStatusLabelText">
                                    <Setter Property="Margin" Value="-1,0,5,0" />
                                    <Setter Property="FontFamily" Value="Segoe UI" />
                                    <Setter Property="FontSize" Value="12" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                    <Setter Property="Foreground" Value="{DynamicResource Gray_900}" />
                                </Style>
                                <Style TargetType="TextBlock" x:Key="SourceStatusIndicatorText" BasedOn="{StaticResource infoTextBlockLeft}">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="Padding" Value="0 0 0 3" />
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <!-- Back Groud -->
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="10"/>
                                <!-- Galium Boat -->
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="10"/>
                                <!-- Ammonia Tube -->
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="10"/>
                                <!-- Aluminum Boat -->
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="10"/>
                                <!-- Etching Tube -->
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="10"/>
                                <!-- H2 / O2 Tube -->
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="10"/>
                                <!-- Back Flange Purge -->
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="10"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Back Ground Inlet" HorizontalAlignment="Left" Margin="0,6,0,0" Foreground="{DynamicResource Gray_900}" FontSize="12"/>                        
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Source1, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"  Style="{StaticResource SourceStatusLabelText}" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Galium Boat Inlet" HorizontalAlignment="Left" Margin="0,6,0,0" Foreground="{DynamicResource Gray_900}" FontSize="12"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Source2, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"  Style="{StaticResource SourceStatusLabelText}" />

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Ammonia Inlet Tube" HorizontalAlignment="Left" Margin="0,6,0,0" Foreground="{DynamicResource Gray_900}" FontSize="12"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Source3, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"  Style="{StaticResource SourceStatusLabelText}" />

                            <TextBlock Grid.Row="9" Grid.Column="0" Text="Aluminum Boat Inlet" HorizontalAlignment="Left" Margin="0,6,0,0" Foreground="{DynamicResource Gray_900}" FontSize="12"/>
                            <TextBlock Grid.Row="10" Grid.Column="1" Text="{Binding Source4, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"  Style="{StaticResource SourceStatusLabelText}" />

                            <TextBlock Grid.Row="12" Grid.Column="0" Text="Etching Tube Inlet" HorizontalAlignment="Left" Margin="0,6,0,0" Foreground="{DynamicResource Gray_900}" FontSize="12"/>
                            <TextBlock Grid.Row="13" Grid.Column="1" Text="{Binding Source5, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"  Style="{StaticResource SourceStatusLabelText}" />

                            <TextBlock Grid.Row="15" Grid.Column="0" Text="H2 / O2 Inlet" HorizontalAlignment="Left" Margin="0,6,0,0" Foreground="{DynamicResource Gray_900}" FontSize="12"/>
                            <TextBlock Grid.Row="16" Grid.Column="1" Text="{Binding Source6, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"  Style="{StaticResource SourceStatusLabelText}" />

                            <TextBlock Grid.Row="18" Grid.Column="0" Text="Back Flange" HorizontalAlignment="Left" Margin="0,6,0,0" Foreground="{DynamicResource Gray_900}" FontSize="12"/>
                            <TextBlock Grid.Row="19" Grid.Column="1" Text="{Binding Source6, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"  Style="{StaticResource SourceStatusLabelText}" />
                            
                            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource SourceStatusIndicator}" >
                                <!--<TextBlock Text="{Binding CurrentSourceStatusViewModel.NH3_1Carrier, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Foreground="{Binding CurrentSourceStatusViewModel.NH3_1CarrierColor}" Style="{StaticResource SourceStatusIndicatorText}" />-->
                            </Border>
                            <Border Grid.Row="4" Grid.Column="1" Style="{StaticResource SourceStatusIndicator}">
                                <!--<TextBlock Text="{Binding CurrentSourceStatusViewModel.NH3_1Source}" Foreground="{Binding CurrentSourceStatusViewModel.NH3_1SourceColor}" Style="{StaticResource SourceStatusIndicatorText}" />-->
                            </Border>
                            <Border Grid.Row="7" Grid.Column="1" Style="{StaticResource SourceStatusIndicator}">
                                <!--<TextBlock Text="{Binding CurrentSourceStatusViewModel.NH3_1Vent}" Foreground="{Binding CurrentSourceStatusViewModel.NH3_1VentColor}" Style="{StaticResource SourceStatusIndicatorText}" />-->
                            </Border>
                            <Border Grid.Row="10" Grid.Column="1" Style="{StaticResource SourceStatusIndicator}">
                                <!--<TextBlock Text="{Binding CurrentSourceStatusViewModel.NH3_2Carrier, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Foreground="{Binding CurrentSourceStatusViewModel.NH3_2CarrierColor}" Style="{StaticResource SourceStatusIndicatorText}" />-->
                            </Border>
                            <Border Grid.Row="13" Grid.Column="1" Style="{StaticResource SourceStatusIndicator}">
                                <!--<TextBlock Text="{Binding CurrentSourceStatusViewModel.NH3_2Source}" Foreground="{Binding CurrentSourceStatusViewModel.NH3_2SourceColor}" Style="{StaticResource SourceStatusIndicatorText}" />-->
                            </Border>
                            <Border Grid.Row="16" Grid.Column="1" Style="{StaticResource SourceStatusIndicator}">
                                <!--<TextBlock Text="{Binding CurrentSourceStatusViewModel.NH3_2Vent}" Foreground="{Binding CurrentSourceStatusViewModel.NH3_2VentColor}" Style="{StaticResource SourceStatusIndicatorText}" />-->
                            </Border>
                            <Border Grid.Row="19" Grid.Column="1" Style="{StaticResource SourceStatusIndicator}">
                                <!--<TextBlock Text="{Binding CurrentSourceStatusViewModel.SiH4Carrier, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Foreground="{Binding CurrentSourceStatusViewModel.SiH4CarrierColor}" Style="{StaticResource SourceStatusIndicatorText}" />-->
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </Grid>
</Page>
