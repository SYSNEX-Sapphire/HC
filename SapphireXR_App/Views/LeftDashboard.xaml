<Page x:Class="SapphireXR_App.Views.LeftDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SapphireXR_App.Views"
      xmlns:model="clr-namespace:SapphireXR_App.Models"
      xmlns:anim="https://github.com/whistyun/AnimatedImage.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="300"
      Title="LeftDashboard">
    <Page.Resources>
        <Style TargetType="Border" x:Key="Tab">
            <Setter Property="BorderBrush" Value="{StaticResource Gray_300}" />
            <Setter Property="BorderThickness">
                <Setter.Value>
                    <Thickness Bottom="1" />
                </Setter.Value>
            </Setter>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Top="{StaticResource p_2}" />
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Background="{StaticResource Gray_100}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="{StaticResource Gray_300}" BorderThickness="0, 0, 0, 1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="14"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="9" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image Grid.Row="1" Grid.Column="1" Source="/Resources/icons/icon=sapphire.png" />
                <Label Grid.Row="1" Grid.Column="3" FontFamily="Segoe UI" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Gray_950}" Content="SapphireXR" Padding="0"/>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.Margin>
                <Thickness Left="{StaticResource p_3}" Right="{StaticResource p_3}" />
            </Grid.Margin>

            <Border Style="{StaticResource Tab}" Padding="0 0 0 20">
                <StackPanel Orientation="Vertical">
                    <Image Height="270" anim:ImageBehavior.AnimatedSource="{Binding SignalTowerImage, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Vertical" Grid.Column="1">
                            <TextBlock FontFamily="Segoe UI" FontSize="12" Foreground="{StaticResource Gray_900}" Padding="0" Text="Machine Name">
                                <TextBlock.Margin>
                                    <Thickness Top="2" />
                                </TextBlock.Margin>
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI" FontSize="12" Foreground="{StaticResource Gray_950}" Text="Lumi HVPE" Padding="0" FontWeight="Bold">
                                <TextBlock.Margin>
                                    <Thickness Top="2" Bottom="2" />
                                </TextBlock.Margin>
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI" FontSize="12" Foreground="{DynamicResource Gray_900}" Padding="0" Text="PLC Address">
                                <TextBlock.Margin>
                                    <Thickness Top="2" />
                                </TextBlock.Margin>
                            </TextBlock>
                            <TextBlock Text="{Binding PLCAddressText}" FontFamily="Segoe UI" FontSize="12" Foreground="{DynamicResource Gray_950}" Padding="0" FontWeight="Bold">
                                <TextBlock.Margin>
                                    <Thickness Top="2" Bottom="2" />
                                </TextBlock.Margin>
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI" FontSize="12" Foreground="{DynamicResource Gray_900}" Text="PLC Connection" Padding="0">
                                <TextBlock.Margin>
                                    <Thickness Top="2" />
                                </TextBlock.Margin>
                            </TextBlock>
                            <TextBlock Text="{Binding PLCConnectionStatus}" Grid.Row="10" Grid.Column="0" FontFamily="Segoe UI" FontSize="12" Padding="0" Foreground="{Binding PLCConnectionStatusColor}" FontWeight="Bold">
                                <TextBlock.Margin>
                                    <Thickness Top="2" Bottom="{StaticResource p_1}" />
                                </TextBlock.Margin>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Grid.Column="2">
                            <TextBlock FontFamily="Segoe UI" FontSize="12" Foreground="{DynamicResource Gray_900}" Padding="0" Text="System ID">
                                <TextBlock.Margin>
                                    <Thickness Top="2" />
                                </TextBlock.Margin>
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI" FontSize="12" Foreground="{DynamicResource Gray_950}" Padding="0" Text="2025 Lumi" FontWeight="Bold">
                                <TextBlock.Margin>
                                    <Thickness Top="2" Bottom="2" />
                                </TextBlock.Margin>
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI" FontSize="12" Foreground="{DynamicResource Gray_900}" Padding="0" Text="Application">
                                <TextBlock.Margin>
                                    <Thickness Top="2" />
                                </TextBlock.Margin>
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI" FontSize="12" Foreground="{DynamicResource Gray_950}" Padding="0" FontWeight="Bold" RenderTransformOrigin="0.563,1.979" Text="GaN">
                                <TextBlock.Margin>
                                    <Thickness Top="2" Bottom="2" />
                                </TextBlock.Margin>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.Margin>
                <Thickness Left="{StaticResource p_3}" Right="{StaticResource p_3}" />
            </Grid.Margin>
            <!-- Source Valve Current Status -->
            <Grid Grid.Row="2" VerticalAlignment="Top" IsEnabled="False">
                <Border Style="{StaticResource Tab}">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                        <StackPanel.Margin>
                            <Thickness Bottom="{StaticResource p_4}" Left="{StaticResource p_2}" />
                        </StackPanel.Margin>
                        <Grid Height="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Source="/Resources/icons/icon=control_knobs.png"  Stretch="Fill"/>
                            <TextBlock Grid.Column="2" Foreground="{DynamicResource Gray_950}" FontSize="14" FontFamily="Segoe UI" FontWeight="Bold" HorizontalAlignment="Left"  VerticalAlignment="Center"><Bold><Run Text="Source Status"/></Bold></TextBlock>
                        </Grid>
                        <StackPanel Orientation="Vertical">
                            <StackPanel.Resources>
                                <Style TargetType="Border" x:Key="SourceStatusIndicator">
                                    <Setter Property="Background" Value="{StaticResource Gray_300}" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Height" Value="28" />
                                    <Setter Property="CornerRadius">
                                        <Setter.Value>
                                            <CornerRadius TopLeft="{StaticResource r_1}" TopRight="{StaticResource r_1}" BottomLeft="{StaticResource r_1}" BottomRight="{StaticResource r_1}" />
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                                <Style TargetType="TextBlock" x:Key="SourceStatusLabelText">
                                    <Setter Property="Margin" Value="-1,0,5,0" />
                                    <Setter Property="FontFamily" Value="Segoe UI" />
                                    <Setter Property="FontSize" Value="12" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                    <Setter Property="Foreground" Value="{DynamicResource Gray_900}" />
                                </Style>
                                <Style TargetType="TextBlock" x:Key="SourceStatusIndicatorText" BasedOn="{StaticResource infoTextBlockLeft}">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="Padding" Value="0 0 0 3" />
                                </Style>
                            </StackPanel.Resources>
                            <StackPanel.Margin>
                                <Thickness Top="{StaticResource p_2}" Left="{StaticResource p_8}"/>
                            </StackPanel.Margin>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Back Ground Inlet" HorizontalAlignment="Left" Foreground="{DynamicResource Gray_900}" FontSize="12" />
                            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource SourceStatusIndicator}" >
                                <Border.Margin>
                                    <Thickness Top="{StaticResource p_2}" />
                                </Border.Margin>
                                <TextBlock Text="{Binding CurrentSourceStatusViewModel.BackgroundInletGas}" Foreground="{Binding CurrentSourceStatusViewModel.BackgroundInletGasColor}" Style="{StaticResource SourceStatusIndicatorText}" />
                            </Border>
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Galium Boat Inlet" HorizontalAlignment="Left" Foreground="{DynamicResource Gray_900}" FontSize="12">
                                <TextBlock.Margin>
                                    <Thickness Top="{StaticResource p_2}" />
                                </TextBlock.Margin>
                            </TextBlock>
                            <Border Grid.Row="4" Grid.Column="1" Style="{StaticResource SourceStatusIndicator}">
                                <Border.Margin>
                                    <Thickness Top="{StaticResource p_2}" />
                                </Border.Margin>
                                <TextBlock Text="{Binding CurrentSourceStatusViewModel.GaliumBoatInletGas}" Foreground="{Binding CurrentSourceStatusViewModel.GaliumBoatInletGasColor}" Style="{StaticResource SourceStatusIndicatorText}" />
                            </Border>
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Ammonia Inlet Tube" HorizontalAlignment="Left" Foreground="{DynamicResource Gray_900}" FontSize="12">
                                <TextBlock.Margin>
                                    <Thickness Top="{StaticResource p_2}" />
                                </TextBlock.Margin>
                            </TextBlock>
                            <Border Grid.Row="7" Grid.Column="1" Style="{StaticResource SourceStatusIndicator}">
                                <Border.Margin>
                                    <Thickness Top="{StaticResource p_2}" />
                                </Border.Margin>
                                <TextBlock Text="{Binding CurrentSourceStatusViewModel.AmmoniaInletTubeGas}" Foreground="{Binding CurrentSourceStatusViewModel.AmmoniaInletTubeGasColor}" Style="{StaticResource SourceStatusIndicatorText}" />
                            </Border>
                            <TextBlock Grid.Row="9" Grid.Column="0" Text="Aluminum Boat Inlet" HorizontalAlignment="Left" Foreground="{DynamicResource Gray_900}" FontSize="12">
                                <TextBlock.Margin>
                                    <Thickness Top="{StaticResource p_2}" />
                                </TextBlock.Margin>
                            </TextBlock>
                            <Border Grid.Row="10" Grid.Column="1" Style="{StaticResource SourceStatusIndicator}">
                                <Border.Margin>
                                    <Thickness Top="{StaticResource p_2}" />
                                </Border.Margin>
                                <TextBlock Text="{Binding CurrentSourceStatusViewModel.AluminuimBoatInletGas}" Foreground="{Binding CurrentSourceStatusViewModel.AluminuimBoatInletGasColor}" Style="{StaticResource SourceStatusIndicatorText}" />
                            </Border>
                            <TextBlock Grid.Row="12" Grid.Column="0" Text="Etching Tube Inlet" HorizontalAlignment="Left" Foreground="{DynamicResource Gray_900}" FontSize="12">
                                <TextBlock.Margin>
                                    <Thickness Top="{StaticResource p_2}" />
                                </TextBlock.Margin>
                            </TextBlock>
                            <Border Grid.Row="13" Grid.Column="1" Style="{StaticResource SourceStatusIndicator}">
                                <Border.Margin>
                                    <Thickness Top="{StaticResource p_2}" />
                                </Border.Margin>
                                <TextBlock Text="{Binding CurrentSourceStatusViewModel.EtchingTubeInletGas}" Foreground="{Binding CurrentSourceStatusViewModel.EtchingTubeInletGasColor}" Style="{StaticResource SourceStatusIndicatorText}" />
                            </Border>
                            <TextBlock Grid.Row="15" Grid.Column="0" Text="H2 / O2 Inlet" HorizontalAlignment="Left" Foreground="{DynamicResource Gray_900}" FontSize="12">
                                <TextBlock.Margin>
                                    <Thickness Top="{StaticResource p_2}" />
                                </TextBlock.Margin>
                            </TextBlock>
                            <Border Grid.Row="16" Grid.Column="1" Style="{StaticResource SourceStatusIndicator}">
                                <Border.Margin>
                                    <Thickness Top="{StaticResource p_2}" />
                                </Border.Margin>
                                <TextBlock Text="{Binding CurrentSourceStatusViewModel.H2O2InletGas}" Foreground="{Binding CurrentSourceStatusViewModel.H2O2InletGasColor}" Style="{StaticResource SourceStatusIndicatorText}" />
                            </Border>
                            <TextBlock Grid.Row="18" Grid.Column="0" Text="Back Flange" HorizontalAlignment="Left" Foreground="{DynamicResource Gray_900}" FontSize="12">
                                <TextBlock.Margin>
                                    <Thickness Top="{StaticResource p_2}" />
                                </TextBlock.Margin>
                            </TextBlock>
                            <Border Grid.Row="19" Grid.Column="1" Style="{StaticResource SourceStatusIndicator}">
                                <Border.Margin>
                                    <Thickness Top="{StaticResource p_2}" />
                                </Border.Margin>
                                <TextBlock Text="{Binding CurrentSourceStatusViewModel.BackFlangeInletGas}" Foreground="{Binding CurrentSourceStatusViewModel.BackFlangeInletGasColor}" Style="{StaticResource SourceStatusIndicatorText}" />
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </Grid>
</Page>
