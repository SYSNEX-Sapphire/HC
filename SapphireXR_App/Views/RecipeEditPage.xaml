                        <Grid.Resources>
                            <Style x:Key="InfoTextLabelRight" TargetType="Label" BasedOn="{StaticResource infoLabelLeft}">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                            <Style x:Key="RecipeEditInfoTextBox" TargetType="TextBox" BasedOn="{StaticResource InfoTextBox}">
